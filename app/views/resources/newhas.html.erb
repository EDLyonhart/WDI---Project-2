<%= render "partials/navbar" %>

<div class="container">
<h2>New Offer:</h2>

  <%= simple_form_for(@resource, url: post_new_user_resource_path(@user), defaults: { error_html: { id: 'error' } }, :html => { :class => "form-group"}) do |f| %>
  <div class="row">
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => session[:user_id] }%>
    <%= f.input :has, :as => :hidden, :input_html => { :value => :true } %>
    <%= f.input :category, label:"Category: ", list:"categories", :collection => @available_resources %>
  </div>
  <%= f.submit "Save your offers", class: 'btn btn-primary' %>
  <% end %>
</div>

<div>
  <%= button_to "Add interests", user_home_path, :class => "button", :method => :get  %>
</div>