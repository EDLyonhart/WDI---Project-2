<div class="container">

  <h2>New resource:</h2>

  <%= simple_form_for(@resource, url: post_want_resource_path(@user), defaults: { error_html: { id: 'error' } }, :html => { :class => "form-group"}) do |f| %>
  <div class="row">
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => session[:user_id] }%>

    <div class="col-md-5">
      <table class="resource_offer">
        <tr>
          <th></th>
          <th>Desired Resource</th>
          <th>Description</th>
        </tr>
        <tr>
          <td><%= f.association :offers,   as: :check_boxes %></td>
          <td>Bike</td>
          <%= f.input :description %>
        </tr>
        <tr>
          <td><%= f.association :offers,   as: :check_boxes %></td>
          <td>Vehicle</td>
          <%= f.input :description %>
        </tr>
        <tr>
          <td><%= f.association :offers,   as: :check_boxes %></td>
          <td>Social</td>
          <%= f.input :description %>
        </tr>
        <tr>
          <td><%= f.association :offers,   as: :check_boxes %></td>
          <td>Pets</td>
          <%= f.input :description %>
        </tr>
        <tr>
          <td><%= f.association :offers,   as: :check_boxes %></td>
          <td>Housing</td>
          <%= f.input :description %>
        </tr>
      </table>
    </div>
</div>
<%= f.button :submit %>
<% end %>