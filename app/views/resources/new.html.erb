<h2>New resource:</h2>

<%= simple_form_for(@resource, defaults: { error_html: { id: 'error' } }, :html => { :class => "form-group"}) do |f| %>
  <div class="row">
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => session[:user_id] }%>
    <div class="col-md-3 col-md-offset-5">
      <%= f.input :presence, label: "Presence (true = have; false = need: "%>
    </div>
    <div class="col-md-3 col-md-offset-3">
      <%= f.input :category, label: "Category: "  %>
    </div>
  </div>
  <br>
  <div class ="row">
    <div class ="col-md-2 col-md-offset-2">
      <%= f.submit "Create resource", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
