<div class="container">

  <h1><%= @user.name %> - My Profile</h1>
  <br><br>
  <%= link_to "View Potential Matches", user_matches_path(@user), method: :get %>
  <br><br>
  <%= link_to "Edit Profile", user_edit_path(@user), method: :get %>
  <br><br>
  <%= link_to "View Public Profile", user_show_path(@user), method: :get %>
  <br><br>
  <%= link_to "Sign out", logout_path, method: :delete %>
  <br><br>

  <h2>My resources:</h2>
  <br>

  <div class="row">
    <div class ="col-md-10 col-md-offset-1">
      <table class ="table table-striped">Need to sort this by wants first
        <tr>
          <th>Have?</th>
          <th>Category</th>
          <th>Info</th>
          <th>Delete</th>
        </tr>
        <% @resources.each do |resource| %>
          <tr >
            <td><%= resource.has %></td>
            <td><%= resource.category %></td>
            <td><%= link_to('Info', user_resource_path(@user, resource), {class: "btn-xs btn-info"})%></td>
            <td><%= link_to('Delete', user_resource_path(@user, resource), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-xs btn-danger") %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class ="col-md-2">
      <%=  link_to('Add new ', new_user_resource_path(@user), {class: "btn btn-primary"}) %>
    </div>
  </div>
  <br>

  <div class ="row">
    <div class = "col-md-2">
      <%= link_to('View Public Profile', user_show_path(@user), {class: "btn btn-primary"}) %>
    </div>
  </div>

</div>






