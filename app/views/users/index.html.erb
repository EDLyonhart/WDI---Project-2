<div class="container">

  <h1>Welcome <%= @user.name %></h1>
  <br><br>
  <%= link_to "My resources", user_resources_path(@user), method: :get %>
  <br><br>
  <%= link_to "Edit Profile", user_edit_path(@user), method: :get %>
  <br><br>
  <%= link_to "View Potential Matches", user_matches_path(@user), method: :get %>
  <br><br>
  <%= link_to "Sign out", logout_path, method: :delete %>
  <br>

</div>





<!-- Resource Index Section -->
<div class="container-fluid user_resource_area well">         <!-- User Resource Info -->
  <%= render "partials/user_resource_index" %>
  <table class ="table table-striped">
    <tr>
      <th>Have?</th>
      <th>Category</th>
      <th>Info</th>
      <th>Delete</th>
    </tr>
    <% @resources.each do |resource| %>
    <tr >
      <td><%= resource.has %></td>
      <td><%= resource.category %></td>
      <td><%= link_to('Info', user_resource_path(@user, resource), {class: "btn-xs btn-info"})%></td>
      <td><%= link_to('Delete', user_resource_path(@user, resource), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-xs btn-danger") %></td>
    </tr>
    <% end %>
  </table>
</div>                                                  <!-- End User Resource Info -->



<!-- Matches Index Section -->
<div class="container-fluid">                           <!-- Matches Info -->
  <div class="col-md-6 user_match_index">               <!-- Connections Info -->

  <% @users.each do |match| %>
    <tr>
      <td><%= match.name %></td>
      <td><%= match.location %></a></td>
      <td><%= link_to('Show', user_show_path(@user), class: "btn-xs btn-info") %></td>
    </tr>
    <% end %>

  </div>                                                  <!-- End Matches Info -->
