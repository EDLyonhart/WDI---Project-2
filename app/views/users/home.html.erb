<h1>Welcome <%= @user.name %></h1>
<%= link_to "Sign out", logout_path, method: :delete %>


<div class="container-fluid">         <!-- User Resource Info -->
  <div class="col-xs-2 status">       <!-- Wants // Haves -->
    <%= label_tag(:want_tag, "I Want") %>
    <%= check_box_tag(:want_tag, "I Want") %> | 
    <%= check_box_tag(:has_tag, "I Have") %>
    <%= label_tag(:has_tag, "I have") %>
  </div>                              <!-- End Wants // Haves -->
  <div class="col-xs-3 category">     <!-- Category Dropdown -->
    <div class="input-group">
      <div class="input-group-btn">
        <!-- Button and dropdown menu -->
      </div>
      <input type="text" class="form-control" aria-label="...">
    </div>

    <div class="input-group">
      <input type="text" class="form-control" aria-label="...">
      <div class="input-group-btn">
        <!-- Button and dropdown menu -->
      </div>
    </div>
  </div>                              <!-- End Category Dropdown -->
  <div class="col-sm-5 description">

    <!-- if it is a want -->
    <%= text_field_tag 'description' %>
    <%= submit_tag(value = 'save description') %>
    <!-- if it is a have just use a <p>description</p> -->

  </div>
  <div class="col-xs-1 dateField">

    <%= date_field_tag('available starting') %>
    <%= date_field_tag('through') %>
    
  </div>
  <div class="col-xs-1 delete">Delete</div>
</div>                                <!-- End User Resource Info -->

<div class="container-fluid">         <!-- Matches Info -->
  <div class="col-md-6">             <!-- Connections Info -->
    <div class="col-sm-4 connectionStatus">Connection Status</div>
    <div class="col-sm-8 matchName">Match Name</div>
  </div>                              <!-- End Connections Info -->
  <div class="col-md-6">             <!-- Link to Carousel -->
    <div class="col-sm-12 carousel">Carousel</div>
  </div>                              <!-- End Link to Carousel -->

</div>                                <!-- End Matches Info -->