<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class = "navbar-header">
<a class="navbar-brand" href="#">SHAREit</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "My Dashboard", user_home_path(@user) %></li>
        <li><%= link_to "My Network", user_network_path(@user) %></li>
        <li><%= link_to "Logout", logout_path, method: :delete %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">

  <h2 class ="text-center">User Public Profile</h2>
  <br>
  <%= simple_form_for(@user, url: user_update_path(@user), defaults: { error_html: { id: 'error' } }, :html => { :class => "form-group"}) do |f|%>
    <div class="row">
      <div class="col-md-2">
        <%= f.input :first_name, label: "First name: ", readonly: true%>
      </div>
      <div class="col-md-2">
        <%= f.input :last_name, label: "Last name: ", readonly: true%>
      </div>
      <div class="col-md-3">
        <%= f.input :location, label: "Location: ", readonly: true%>
      </div>
    </div>

    <div class="row">

    </div>
  <% end %>


  <div class="row">
    <div class="col-md-6">
      <h3>Reviews</h3>
      <h4 style="color:red">NOTE: Only users who have matched with the profile user can leave reviews</h4>
      <%= form_for [@user, Review.new], url: user_reviews_path(@user) do |f| %>
        <%= f.text_area :content, :rows => 3, :cols => 50 %>
        <br>
        <%= f.submit "Add review" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <br><br>
      <% @reviews.each do |review| %>
        <p>
          <%= review.content %> - <%= time_ago_in_words review.created_at %> ago by <strong><%= User.find(review.user_id).name %></strong>
        </p>
      <% end %>
    </div>
  </div>

</div>