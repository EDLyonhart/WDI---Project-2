
<link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<div class="container-fluid">
  <div class = "col-md-6 col-md-offset-3">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval = "5000">


      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
        <h1 class = "text-center"><%=@carousel_users[0].first_name %></h1>
          <div class = "jumbotron">
            <div class = "col-md-2  col-md-offset-3 col-centered" >
              <div class = row>
                <img id="hell" src="<%=@carousel_users[0].profile_pic %>?type=large" alt="...">
              </div>
              <br><Br>
            </div>
          </div>
          <div class="row">
            <div class ="col-md-10 col-md-offset-1">
              <table class ="table">
                <tr>
                  <td >Has:</td>
                  <td >Bike</td>
                  <td>Car</td>
                  <td >Bike</td>
                  <td>Car</td>
                </tr>
                <tr>
                  <td >Wants:</td>
                  <td >Bike</td>
                  <td>Car</td>
                  <td >Bike</td>
                  <td>Car</td>
                </tr>
              </table>
            </div>
          </div>
           <div class="row">
           <div class = "col-md-offset-5">
          <%=  link_to('Like User',like_check_path(session[:user_id],@carousel_users[0].id) ,method: :post, class: "btn btn-primary") %>
        </div>
        </div>
        </div>
        <% @match_list.each do |user| %>
        <div class="item">
         <h1 class = "text-center"><%=user.first_name %></h1>
          <div class = "jumbotron">
             <div class = "col-md-2  col-md-offset-3 col-centered" >
              <div class = row>
                <img id ="hell" src="<%=user.profile_pic %>?type=large" alt="...">
              </div>
              <br><Br>
            </div> 
          </div>
          <div class="row">
            <div class ="col-md-10 col-md-offset-1">
              <table class ="table">
                <tr>
                  <td >Has:</td>
                  <td >Bike</td>
                  <td>Car</td>
                  <td >Bike</td>
                  <td>Car</td>
                </tr>
                <tr>
                  <td >Wants:</td>
                  <td >Bike</td>
                  <td>Car</td>
                  <td >Bike</td>
                  <td>Car</td>
                </tr>
              </table>
            </div>
          </div>
          <div class="row">
          <div class = "col-md-offset-5">
          <%=  link_to('Like User',like_check_path(session[:user_id],user.id), method: :post, class: "btn btn-primary") %>
          </div>
        </div>
        </div>
        <% end %>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
         <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
       </a>
       <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      </a>
    </div>
  </div> <!-- Carousel -->

</div> <!-- container-fluid -->