<h2>Add an Interest:</h2>

<%= simple_form_for(@user, url: user_interest_path , defaults: { error_html: { id: 'error' } }, :html => { :class => "form-group"}) do |f| %>
<div class="row">
  <%= f.input :user_id, :as => :hidden, :input_html => { :value => session[:user_id] }%>
  <div class="col-md-3 col-md-offset-1 interest_dropdown">
    <%= f.input :category, label:"Category: ", list:"categories", :collection => ['music', 'politics', 'physical activities', 'profession'] %>
  </div>

  <div class="col-md-5">
    <table class="interest interest_music">
      <tr>
        <th></th>
        <th>Musical Interests</th>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Rock</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Electronic</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Americana</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Hip-Hop</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Classical</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Indy</td>
      </tr>
    </table>

    <table class="interest interest_politics">  
      <tr>
        <th></th>
        <th>Political Interests</th>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Socialism</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Liberatarianism</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Left Wing</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Right Wing</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Eco-Conscious</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Feminism</td>
      </tr>
    </table>

    <table class="interest interest_physical">
      <tr>
        <th></th>
        <th>Physical Activities</th>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Bicycling</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Jogging</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Team Sports</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Hiking</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Working Out</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Dancing</td>
      </tr>
    </table>

    <table class="interest interest_professional">
      <tr>
        <th></th>
        <th>Professional</th>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Technology</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Manual Labor</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Service/Retail</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Management</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Governmental</td>
      </tr>
      <tr>
        <td><%= f.association :interests,   as: :check_boxes %></td>
        <td>Non-profit</td>
      </tr>
    </table>
  </div>

  <br>

  <div class="row">
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => session[:user_id] }%>
    <div class="col-md-3 col-md-offset-1 location_field">
      <%= f.input :location %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class ="col-md-2">
      <%= f.submit "Save Interests and Location", class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>